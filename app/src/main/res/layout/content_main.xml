<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FrontendInput"
    tools:showIn="@layout/app_bar_main"
    >


    <Button
        android:id="@+id/buttonZero"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="16dp"
        android:background="?attr/colorButtonNormal"
        android:text="0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_plus"
        app:layout_constraintEnd_toStartOf="@+id/button_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputExpression" />

    <Button
        android:id="@+id/button_one"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginTop="16dp"
        android:background="?attr/colorButtonNormal"
        android:text="1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_multiply"
        app:layout_constraintEnd_toStartOf="@+id/button_delete"
        app:layout_constraintStart_toEndOf="@+id/buttonZero"
        app:layout_constraintTop_toBottomOf="@+id/inputExpression" />

    <Button
        android:id="@+id/button_delete"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_marginTop="16dp"
        android:background="?attr/colorButtonNormal"
        android:text="Löschen"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_not"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_one"
        app:layout_constraintTop_toBottomOf="@+id/inputExpression" />


    <Button
        android:id="@+id/button_plus"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_row="1"
        android:layout_column="0"
        android:background="?attr/colorButtonNormal"
        android:text="+"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_arrow"
        app:layout_constraintEnd_toStartOf="@+id/button_multiply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonZero" />

    <Button
        android:id="@+id/button_multiply"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_row="1"
        android:layout_column="1"
        android:background="?attr/colorButtonNormal"
        android:text="*"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_darrow"
        app:layout_constraintEnd_toStartOf="@+id/button_not"
        app:layout_constraintStart_toEndOf="@+id/button_plus"
        app:layout_constraintTop_toBottomOf="@+id/button_one" />

    <Button
        android:id="@+id/button_not"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_row="1"
        android:layout_column="2"
        android:background="?attr/colorButtonNormal"
        android:text="¬"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_bracket1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_multiply"
        app:layout_constraintTop_toBottomOf="@+id/button_delete" />


    <Button
        android:id="@+id/button_arrow"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_row="2"
        android:layout_column="0"
        android:background="?attr/colorButtonNormal"
        android:text="→"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_bracket2"
        app:layout_constraintEnd_toStartOf="@+id/button_darrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_plus" />

    <Button
        android:id="@+id/button_darrow"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_row="2"
        android:layout_column="1"
        android:background="?attr/colorButtonNormal"
        android:text="↔"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_a"
        app:layout_constraintEnd_toStartOf="@+id/button_bracket1"
        app:layout_constraintStart_toEndOf="@+id/button_arrow"
        app:layout_constraintTop_toBottomOf="@+id/button_multiply" />

    <Button
        android:id="@+id/button_bracket1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_row="2"
        android:layout_column="2"
        android:background="?attr/colorButtonNormal"
        android:text="("
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_darrow"
        app:layout_constraintTop_toBottomOf="@+id/button_not" />


    <Button
        android:id="@+id/button_bracket2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_row="3"
        android:layout_column="0"
        android:background="?attr/colorButtonNormal"
        android:text=")"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_c"
        app:layout_constraintEnd_toStartOf="@+id/button_a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_arrow" />

    <Button
        android:id="@+id/button_a"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_row="3"
        android:layout_column="1"
        android:background="?attr/colorButtonNormal"
        android:text="a"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_d"
        app:layout_constraintEnd_toStartOf="@+id/button_b"
        app:layout_constraintStart_toEndOf="@+id/button_bracket2"
        app:layout_constraintTop_toBottomOf="@+id/button_darrow" />

    <Button
        android:id="@+id/button_b"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_row="3"
        android:layout_column="2"
        android:background="?attr/colorButtonNormal"
        android:text="b"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_e"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_a"
        app:layout_constraintTop_toBottomOf="@+id/button_bracket1" />


    <Button
        android:id="@+id/button_c"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_row="4"
        android:layout_column="0"
        android:background="?attr/colorButtonNormal"
        android:text="c"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_f"
        app:layout_constraintEnd_toStartOf="@+id/button_d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_bracket2" />

    <Button
        android:id="@+id/button_d"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="125dp"
        android:layout_height="65dp"
        android:layout_row="4"
        android:layout_column="1"
        android:background="?attr/colorButtonNormal"
        android:text="d"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_solve"
        app:layout_constraintEnd_toStartOf="@+id/button_e"
        app:layout_constraintStart_toEndOf="@+id/button_c"
        app:layout_constraintTop_toBottomOf="@+id/button_a" />

    <Button
        android:id="@+id/button_e"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_row="4"
        android:layout_column="2"
        android:background="?attr/colorButtonNormal"
        android:text="e"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_solve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_d"
        app:layout_constraintTop_toBottomOf="@+id/button_b" />


    <Button
        android:id="@+id/button_f"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_row="5"
        android:layout_column="0"
        android:background="?attr/colorButtonNormal"
        android:text="f"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_solve"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_c" />

    <Button
        android:id="@+id/button_solve"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="260dp"
        android:layout_height="65dp"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/my_button_bg"
        android:text="Lösen"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_f"
        app:layout_constraintTop_toBottomOf="@+id/button_d" />

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:src="@drawable/logo_rv_dhbw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputExpression"
        android:layout_width="376dp"
        android:layout_height="75dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonZero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_logo" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/lastInputs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="330dp"
        android:layout_marginLeft="330dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/inputExpression"
        app:layout_constraintEnd_toEndOf="@+id/inputExpression"
        app:layout_constraintStart_toStartOf="@+id/inputExpression"
        app:layout_constraintTop_toTopOf="@+id/inputExpression"
        app:layout_constraintVertical_bias="0.542"
        app:srcCompat="@android:drawable/arrow_down_float" />


</android.support.constraint.ConstraintLayout>